
<%= simple_form_for(@car) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :year %>
    <%= f.input :km %>
    <%= f.input :price %>
    <%= f.input :color %>
    <%= f.input :registration %>
    <%= f.input :description %>
    <%= f.input :fuel_type %>
    <%= f.input :transmission_type %>
    <%= f.input :location %>
    <%= f.association :seller %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
